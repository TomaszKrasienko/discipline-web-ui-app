@namespace discipline.ui.Components.Common.ButtonsComponents

<div>
    <span class="discipline-text-btn" @onclick="OnClick">
        @Text
    </span>
</div>

@code {
    [Parameter] public string Text { get; set; }
    
    [Parameter]
    public EventCallback<string> OnClickCallback { get; set; }

    private async Task OnClick()
    {
        await OnClickCallback.InvokeAsync(string.Empty);
    }
}