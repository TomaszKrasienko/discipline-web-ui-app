@using discipline.ui.Enums
<div>
    <button
        class="btn @(Color == DisciplineBtnColor.Light ? "discipline-text-btn-light" : "discipline-text-btn-dark")" 
        @onclick="OnClick">
        @Text
    </button>
</div>

@code {
    [Parameter, EditorRequired] 
    public string? Text { get; set; }
    
    [Parameter, EditorRequired] 
    public DisciplineBtnColor Color { get; set; }
    
    [Parameter]
    public EventCallback OnClickCallback { get; set; }

    private async Task OnClick()
        => await OnClickCallback.InvokeAsync();
}